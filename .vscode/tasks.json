{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build web",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/identity-client-web-app/identity-client-web-app.csproj",
        "-c",
        "Debug"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "build function",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/identity-client-api/identity-client-api.csproj",
        "-c",
        "Debug"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "func host start (identity-client-api)",
      "type": "shell",
      "command": "func start",
      "options": {
        "cwd": "${workspaceFolder}/src/identity-client-api"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": {
            "regexp": ".*",
            "file": 1,
            "location": 2,
            "message": 0
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^.*Building host.*$",
            "endsPattern": "^.*Functions:.*GetEmbedToken.*$"
          }
        }
      ]
    },
    {
      "label": "func host start (whereami-function)",
      "type": "shell",
      "command": "func start",
      "options": {
        "cwd": "${workspaceFolder}/src/whereami-function"
      },
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": {
            "regexp": ".*",
            "file": 1,
            "location": 2,
            "message": 0
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^.*Building host.*$",
            "endsPattern": "^.*Functions:.*WhereAmI.*$"
          }
        }
      ]
    },
    {
      "type": "func",
      "dependsOn": "build (functions)",
      "options": {
        "cwd": "${workspaceFolder}/bin/Debug/net8.0"
      },
      "command": "host start",
      "isBackground": true,
      "problemMatcher": "$func-dotnet-watch"
    }
  ]
}
