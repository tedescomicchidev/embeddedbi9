{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Web: identity-client-web-app",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build web",
      "program": "${workspaceFolder}/src/identity-client-web-app/bin/Debug/net8.0/identity-client-web-app.dll",
      "cwd": "${workspaceFolder}/src/identity-client-web-app",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Now listening on: (https?://\\S+)"
      },
      "justMyCode": true
    },
    // Start only the Functions host task (background). Then use the attach config below.
    {
      "name": "Functions: Start Host Task",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "func host start (identity-client-api)",
      "program": "${workspaceFolder}/src/identity-client-api/bin/Debug/net8.0/identity-client-api.dll",
      "cwd": "${workspaceFolder}/src/identity-client-api",
      "env": {
        "AzureWebJobsStorage": "UseDevelopmentStorage=true"
      },
      "stopAtEntry": false,
      "justMyCode": true
    },
    // Start only the Functions host task (background). Then use the attach config below.
    {
      "name": "Functions: Start Host Task WhereAmI",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "func host start (whereami-function)",
      "program": "${workspaceFolder}/src/whereami-function/bin/Debug/net8.0/whereami-function.dll",
      "cwd": "${workspaceFolder}/src/whereami-function",
      "env": {
        "AzureWebJobsStorage": "UseDevelopmentStorage=true"
      },
      "stopAtEntry": false,
      "justMyCode": true
    },
    {
      "name": "Functions: Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Attach to .NET Functions",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:azureFunctions.pickProcess}"
    }
  ],
  "compounds": [
    {
      "name": "Start Web + Functions Host",
      "configurations": [
        "Functions: Start Host Task",
        "Web: identity-client-web-app"
      ]
    }
  ]
}
